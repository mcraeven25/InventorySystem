<%- include('partials/head')%>
<main>
<h1 class="heading">Employees</h1>
  <div class="container">
    <div class="messagess">
   <% if(fail && fail.length) { %>
       <div class="d-flex justify-content-center w-100 ">
        <div class="alert alert-danger alert-dismissible fade show w-100 " role="alert">
            <%=fail %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        </div>
        <% } %> 
        <% if(messages && messages.length) { %>
       <div class="d-flex justify-content-center w-100 ">
        <div class="alert alert-success alert-dismissible fade show w-100" role="alert">
            <%=messages %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        </div>
        <% } %> 
      </div>
      
  <div class="filter">
    
    <div class="button">
        <button data-modals-target="#modals" class="btn "></button>
        </div>
      </div>
    
  <div class="tables wrapper">
    <table class = "table sticky">
      <thead>
        <tr>
          <th class = "id">Employee ID</th>
          <th data-column="first" data-order="desc">First Name</th>
          <th >Last Name</th>
          <th>Number</th>
          <th>Email</th>
          <th class="authorization">Authorization</th>
        </tr>
      </thead>
      <tbody id="body">
      </tbody>
    </table>
  </div>
   
</div>
 <div id="loading">
  <img id="loading-image" src="/css/Rolling-1s-200px.gif" alt="Loading..." />
      </div>
   <div id="overlay"></div> 
  <div class="modals" id="modals">
    <div class="modals-header">
      <h1 class="head">Add a new Employee</h1>
      <button data-close-button class="close">&times;</button>
    </div>

    <div class="body">
      <form action action="/user" method="POST"  class="home-form needs-validation" novalidate>
        <div class="details">
          <div class="first-name form">
            <label for="first_name">First Name:</label>
            <input class="form-control" required type="text" name="firstName" id="first_name" onkeypress=/>
          </div>
          <div class="last-name form">
            <label for="last_name">Last Name:</label>
            <input class="form-control" required type="text" name="lastName" id="last_name" />
          </div>
          <div class="number form">
            <label for="number">Mobile Number:</label>
            <input class="form-control" required type="number" name="number" id="number" />
          </div>
          <div class="email form">
            <label for="email">Email:</label>
            <input class="form-control" required type="text" name="email" id="email"  />
          </div>
          <div class="userName form">
            <label for="userName">Username:</label>
            <input class="form-control" required type="text" name="userName" id="username" />
          </div>
           <div class="password form">
            <label for="password">Password:</label>
            <input class="form-control" required type="password" name="password" id="password" />
          </div>
            <div class="confirm form">
            <label for="confirm">Confirm Password:</label>
            <input class="form-control" required type="password" name="confirm" id="password2" />
          </div>
           <div class="form">
           <div class="select">
            <label for="position">Position:</label>
           <select name="position" id="position" class="form-select w-100 sel" required>
              <option value="Manager">Manager</option>
              <option value="Employee">Employee</option>
           </select>
           </div>
          </div>
          </div>
        </div>
        <div class="btn">
          <button class="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>

  </main>
<p id="users" style="display:none"><%= users %></p>
  

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
   integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
   integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="scripts/user.js">
      
    
 </script>
 
  </body>
</html>

