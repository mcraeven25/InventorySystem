<%- include('../partials/head-employee')%>
     <div class="info">
        <div class="daily sales">
          <h1>Monthly Sales</h1>
          <input id ="monthly"  type ="number" readonly value="0">
        </div>
        <div class="target sales">
          <h1>Monthly target</h1>
          <input id ="target"  type ="number" readonly value="<%= user.target%>">
        </div>
      </div>
      <div class="navigation">
          <div class="navigate">
             <button data-modals-target="#modals" class="btn add">Add Sale</button>
          </div>
          <a href="/employee-devices" class = "a">
          <div class="navigate">
            <h1>Devices</h1>
          </div>
          </a>
           <a href="/employee-sale" class = "a">
          <div class="navigate">
            <h1 class ="a">Sales</h1>
          </div>
          </a>
          <a href="//returned" class = "a">
          <div class="navigate">
            <h1>Repairs and Returns</h1>
          </div>
          </a>
           <a href="/stock-report" class = "a">
          <div class="navigate">
             <button class="add">Stock Reports</button>
          </div>
            </a>
            
            <form action="/logout" method="POST" class="log">
             <button class="add">Logout</button>
             </form>
       
          </a>
      </div>
       <div id="overlay"></div>
    <div class="modals" id="modals">
    <div class="modals-header">
      <h1 class="sale">Add a Sale</h1>
      <button data-close-button class="close">&times;</button>
    </div>
    <div class="body">
      <form action="/employee-sale" method="POST" class="needs-validation" novalidate>
       <div class="details">
             <div class="code form">
            <label for="code">Product Code:</label>
            <div class="flex">
            <select style="width: 75%" name="code" id="code"class="form-select">
                <% for(code of codes) { %>
            <option value="<%= code.code %>"><%= code.code %></option>
          <% } %>
             </select>
             <button id="camera2" data-modals-target="#modals3" class="bt">
              <i class='bx bxs-camera' style='color:#fff;font-size:30px;'>
            </i></i></button>
          </div>
          </div>
          <div class="imei form">
            <label for="imei">IMEI:</label>
            <div class="flex">
            <input  type="number" class="form-control" name="imei" id="imei" required/>
            <button id="camera" data-modals-target="#modals2" class="bt"><i class='bx bxs-camera' style='color:#fff;font-size:30px;'  ></i></i></button>
          </div>
          </div>
          <div class="first-name form">
            <label for="first_name">First Name:</label>
            <input  type="text" class="form-control" name="firstName" id="first_name" required/>
          </div>
          <div class="last_name form">
            <label for="last_name">Last Name:</label>
            <input  type="text" class="form-control" name="lastName" id="last_name" required/>
          </div>
          <div class="number form">
            <label for="number">Mobile Number:</label>
            <input type="number" class="form-control" name="number" id="number" maxlength="11" required/>
          </div>
          <div class="address-input form">
            <label for="address">Address:</label>
            <input  type="text" name="address" class="form-control" id="address" placeholder="City, Province" required/>
          </div>
          <div class="seller form">
            <label for="seller">Seller:</label>
             <select name="sellerID" id="seller">
               <% for(user of users) { %> 
                <% if (user.position == "Employee") {%>
                <option value="<%=user.id %>"><%=user.firstName %> <%=user.lastName %></option>
                <% } %>
                 <% } %>
             </select>
          </div>
        </div>
        <div class="btn">
        <button class="submit" type="submit">Submit form</button>
      </div>
   </form>
    </div>
    <div class="modals camera-modal" id="modals2">
      <div class="modals-header camera-header">
      <button data-close-button class="closed" id="close">&times;</button>
    </div>
    <div id="div-ui-container" style="width:100%;height:100%">
    <div class="dce-video-container cam" style="position:absolute;width:100%;height:650px;"></div>
    </div>
    </div>
  </div>
  <div id="loading">
  <img id="loading-image" src="/css/Rolling-1s-200px.gif" alt="Loading..." />
      </div>
       <div class="modals camera-modal" id="modals3">
      <div class="modals-header camera-header">
      <button data-close-button class="closed" id="close2">&times;</button>
    </div>
    <div id="div-ui-container2" style="width:100%;height:100%">
    <div class="dce-video-container" style="position:absolute;width:100%;height:600px;"></div>
    </div>
    </div>
 
  
  </main>



    <p id="sales" style="display:none"><%= sales %></p>
  <p id="users" style="display:none"><%= users %></p>
  <p id="user" style="display:none"><%= id %></p>
   <p id="target" style="display:none"><%= user.target %></p>
   <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/dynamsoft-javascript-barcode@9.0.2/dist/dbr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
   integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
   integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
 
    <script src="/scripts/user-dashboard.js">
    
    </script>

  </body>
</html>
