<%- include('../partials/sale-head')%>
<main>
       <% if( updated && updated.length) { %>
             <div class="d-flex justify-content-center mt-2 w-100">
        <div class="alert alert-success alert-dismissible fade show " role="alert">
            <%= updated %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
        </div>
      <% } %>
    <div class="container">
        <div class="form">
            <form action="/sales/edit?_method=PUT" method="POST">
                <h1 class>Edit Sale Details</h1>
                <div class="details">
                  <% if (position === "Manager") { %> 
                    <div class="box">
                    
                    <input type="hidden" id="current" name="current" value="<%= sales.imei %>">
                </div>
                  <div class="box">
                    <label for="imei">IMEI </label>
                    <input type="text" id="imei" name="imei" value="<%= sales.imei %>">
                </div>
                <% }%> 
                <div class="box">
                    <label for="firstName">First Name: </label>
                    <input type="text" id="firstName" name="firstName" value="<%= sales.firstName %>">
                </div>
                <div class="box">
                    <label for="lastName">Last Name: </label>
                    <input type="text" id="lastName" name="lastName" value="<%= sales.lastName %>">
                </div>
                <div class="box">
                    <label for="number">Number: </label>
                    <input type="number" id="number" name="number" value="<%= sales.number %>">   
                </div>
                  <div class="box">
                    <label for="address">Address: </label>
                    <input type="text" id="address" name="address" value="<%= sales.address %>">   
                </div>
                </div>
               <div class="submit">
                   <button class ="bt">Submit</button>
               </div>
               
            </form>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
   integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
   integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<%- include('../partials/end')%>