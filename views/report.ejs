<%- include('partials/head')%>
<main>
  <h1 class="heading">Reports</h1>
  <div class="tab-container">
  <ul class = "tabs">
    <li data-tab-target="#monthly" class ="tab active monthly-tab">Monthly Sales</li>
    <li data-tab-target="#by-models" class ="tab">Current Month's Sales by Models</li>
  </ul>
  </div>
  <div class="tab-content">
    
 <div class="container" >
   <div class="monthly active" id="monthly" data-tab-content>
   <canvas id="myChart" ></canvas>
    </div>
</div>
 <div id="loading">
  <img id="loading-image" src="/css/Rolling-1s-200px.gif" alt="Loading..." />
      </div>
<div class="wrap" id="by-models" data-tab-content>
<div class="phones">
    <% for (brand of brands) { %> 
          <div class="<%= brand.brand %> phone">
            <h2 class="label"><%= brand.brand %></h2>
            <canvas id="<%= brand.brand %>" width="50" height="50"></canvas>
             </div>
            <% } %> 
</div>
</div>
</div>
<p id="sales" style="display:none"><%= sales %></p>
<p id="models" style="display:none"><%= models %></p>
</main>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
   integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
   integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-datalabels/2.0.0/chartjs-plugin-datalabels.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.js"></script>
    <script src="scripts/report.js">

    </script>
 
  </body>
</html>

