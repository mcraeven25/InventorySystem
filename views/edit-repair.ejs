<%- include('./partials/sale-head')%>
<main>
 
    <div class="container">
       <% if(messages && messages.length) { %>
       <div class="d-flex justify-content-center mt-2 w-100 ">
        <div class="alert alert-success alert-dismissible fade show " role="alert">
            <%=messages %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        </div>
        <% } %> 
        <div class="form">
            <form action="/returned/<%= returned.imei %>?_method=PUT" method="POST">
                <h1>Edit Details</h1>
            <div class="details">
                <div class="box">
                    <input type="number" id="imei" name="imei" value="<%= returned.imei %>">
                </div>    
                 <div class="box">
                    <label for="reason">Reason: </label>
                    <input type="text" id="reason" name="reason" value="<%= returned.reason %>">
                </div>
                 <div class="box">
                    <label for="action">Action: </label>
                    
                    <select id="action" name="action" value="<%= returned.action %>">
                        <% if (returned.action === "Replacement") { %> 
                        <option value="<%= returned.action %>" selected><%= returned.action %></option>
                        <option value="For Repair">For Repair</option>
                        <% } else { %>
                        <option value="<%= returned.action %>"><%= returned.action %></option>
                        <option value="Replacement">Replacement</option>
                            <% } %> 
                    </select>
                </div>
                <div class="box">
                </div>
               <div class="submit">
                   <button class ="bt">Submit</button>
               </div>
               
            </form>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" 
   integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
   integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<%- include('./partials/end')%>